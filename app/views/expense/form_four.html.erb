    <%= select_tag(:payment_type, options_for_select(["select payment typeðŸ‘‡",'cashðŸ’°', 'onlineðŸ“±', 'cardðŸ’³', 'bank transferðŸ¦', 'chequeðŸ“‡'])) %>
  </div>

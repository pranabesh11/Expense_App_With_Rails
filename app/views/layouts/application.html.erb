<!DOCTYPE html>
<html>
  <head>
    <title>Khata</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>


    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Logged in as #{current_user.email}" %> | <%= link_to 'Home', root_path,class:"button-24"%> | <%= link_to 'Log Out', logout_path, method: :delete ,class:"button-24"%>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Home', root_path ,class:"button-24"%> | <%= link_to 'Log In', login_path ,class:"button-24"%> or <%= link_to 'Sign Up', users_new_path ,class:"button-24"%>
    <% end %>
    <hr>

    <!-- this code is for notice and alert to show on each page after happening anything good-->
    <% if notice %>
      <%= notice %>
	  <% end %>
	
    <% if alert %>
      <%= alert %>
    <% end %>

    <%= yield %>
  </body>
</html>
